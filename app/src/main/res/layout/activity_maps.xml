<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:fillViewport="true">
            <TextView
                android:id="@+id/absenTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Absen Masuk"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"/>
            <View
                android:id="@+id/separatorTitle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBorder"
                android:layout_below="@+id/absenTitle"
                />
        </RelativeLayout>
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_weight="1"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <fragment
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat tidak ditemukan"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/map"/>
                <LinearLayout
                    android:id="@+id/jamFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/alamat">
                    <TextView
                        android:id="@+id/jamLabel"
                        android:layout_height="50dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="Jam Masuk:"
                        android:background="#eeeeee"
                        android:gravity="center"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/jam"
                        android:layout_height="50dp"
                        android:layout_width="0dp"
                        android:text="15:00:00"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:background="@drawable/border_left"
                        android:layout_weight="2"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/alasanFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:errorEnabled="true"
                    android:hint="Keterangan Terlambat"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintTop_toBottomOf="@id/jamFrame">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/alasan"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="start"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/emojiLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bagaimana perasaan anda hari ini?"
                    android:background="@color/colorBlack50"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/alasanFrame"/>

                <RadioGroup
                    android:id="@+id/emoji"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:checkedButton="@id/nyaman"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintDimensionRatio="4:1"
                    app:layout_constraintTop_toBottomOf="@id/emojiLabel">

<!--                    <View-->
<!--                        android:id="@+id/view1"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        />-->

                    <RadioButton
                        android:id="@+id/tertekan"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:button="@null"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/radio_tertekan"
                        android:gravity="center"
                        android:text="Tertekan"/>

<!--                    <View-->
<!--                        android:id="@+id/view2"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        />-->

                    <RadioButton
                        android:id="@+id/nyaman"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:drawableTop="@drawable/radio_nyaman"
                        android:button="@null"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Nyaman"/>

<!--                    <View-->
<!--                        android:id="@+id/view3"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        />-->

                    <RadioButton
                        android:id="@+id/semangat"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:drawableTop="@drawable/radio_semangat"
                        android:button="@null"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Semangat"/>

<!--                    <View-->
<!--                        android:id="@+id/view4"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        />-->
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorBackground">
            <Button
                android:id="@+id/absenKlik"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="Absen"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_green"
                android:fitsSystemWindows="true"
                android:layout_gravity="center_horizontal|bottom"
                />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
